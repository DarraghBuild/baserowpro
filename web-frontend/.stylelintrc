{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/regex/",
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return",
          "extend",
          "for",
          "else"
        ]
      }
    ]
  }
}
